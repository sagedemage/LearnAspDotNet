@model IEnumerable<LearnAspDotNet.Models.Weather>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" href="/Weathers/Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                <!-- /Edit?id=1 -->
                <a class="btn btn-primary" href="/Weathers/Edit?id=@item.id">Edit</a>
                <button class="btn btn-danger" onclick="deleteWeather(@item.id)">Delete</button>
            </td>
        </tr>
}
    </tbody>
</table>

<script src="~/js/weather.js"></script>
